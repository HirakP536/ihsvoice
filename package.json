{
  "name": "ihs-voice",
  "productName": "IHSVoice",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "build": {
    "appId": "com.ihs.voice",
    "productName": "IHSVoice",
    "compression": "maximum",
    "directories": {
      "output": "dist"
    },
    "extraFiles": [
      {
        "from": "./kill_app.bat",
        "to": "resources/kill_app.bat"
      }
    ],
    "win": {
      "icon": "icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "IHSVoice",
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "deleteAppDataOnUninstall": true
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-store": "^10.0.1"
  }
}
